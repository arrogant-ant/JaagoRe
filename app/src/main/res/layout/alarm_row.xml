<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Custom.Widget.CardView"
    android:padding="12dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="10:00 AM"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <CheckBox
            android:id="@+id/repeat_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:button="@drawable/checkbox_f"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alarm_time" />
        <CheckBox
            android:id="@+id/repeat_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:button="@drawable/checkbox_f"
            app:layout_constraintStart_toEndOf="@id/repeat_s"
            app:layout_constraintTop_toTopOf="@id/repeat_s"/>
        <CheckBox
            android:id="@+id/repeat_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:button="@drawable/checkbox_f"
            app:layout_constraintStart_toEndOf="@id/repeat_m"
            app:layout_constraintTop_toTopOf="@id/repeat_s"/>
        <CheckBox
            android:id="@+id/repeat_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:button="@drawable/checkbox_f"
            app:layout_constraintStart_toEndOf="@id/repeat_t"
            app:layout_constraintTop_toTopOf="@id/repeat_s"/>
        <CheckBox
            android:id="@+id/repeat_th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:button="@drawable/checkbox_f"
            app:layout_constraintStart_toEndOf="@id/repeat_w"
            app:layout_constraintTop_toTopOf="@id/repeat_s"/>
        <CheckBox
            android:id="@+id/repeat_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:button="@drawable/checkbox_f"
            app:layout_constraintStart_toEndOf="@id/repeat_th"
            app:layout_constraintTop_toTopOf="@id/repeat_s"/>
        <CheckBox
            android:id="@+id/repeat_sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:button="@drawable/checkbox_f"
            app:layout_constraintStart_toEndOf="@id/repeat_f"
            app:layout_constraintTop_toTopOf="@id/repeat_s"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
