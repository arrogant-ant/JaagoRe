<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorAccent">#ae0</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:textColor">@color/onSecondary</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="AlarmTheme" parent="AppTheme">
        <item name="colorAccent">#ff2d6073</item>
        <item name="android:timePickerStyle">@style/MyTimePicker</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/textAccent</item>
        <item name="android:textColorSecondary">@color/textAccent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@android:color/white</item>

    </style>

    <!-- time picker customisation-->
    <style name="MyTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:headerTimeTextAppearance">
            @style/TextAppearance.TimePickerDialogStyle.TimeLabel
        </item> <!-- TimePicker Time *TextAppearance* -->
        <item name="android:numbersTextColor">@color/yellow</item>
        <item name="android:numbersSelectorColor">#cddc39</item>
        <item name="android:numbersBackgroundColor">#ffdddddd</item>
        <item name="android:textColor">#ffffffff</item>


    </style>

    <style name="TextAppearance.TimePickerDialogStyle.TimeLabel" parent="@android:style/TextAppearance.Material">

        <item name="android:textSize">60sp</item> <!-- from -->
        <item name="android:textColor">#ffD0D102</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomSwitch" parent="AppTheme">
        <item name="colorControlActivated">@color/colorPrimaryVariant</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
    </style>

    <style name="Custom.Widget.CardView" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="cardCornerRadius">12dp</item>
        <!--<item name="cardUseCompatPadding">true</item>-->
        <item name="android:layout_margin">5dp</item>
        <item name="contentPadding">4dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="Custom.Widget.BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="elevation">4dp</item>
        <item name="background">?android:attr/windowBackground</item>
        <item name="itemIconTint">@color/botton_nav_selector</item>
        <item name="itemTextColor">@color/onBackground</item>
        <item name="menu">@menu/bottom_navigation</item>

    </style>
</resources>

