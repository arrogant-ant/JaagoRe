<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="iris.example.sabita_sant.alarm"
    android:versionCode="6"
    android:versionName="2.3" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="26.0.0-alpha1" />

    <application
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="iris.jaagore.sabita_sant.alarm.AddAlarm"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AlarmTheme" />

        <receiver android:name="iris.jaagore.sabita_sant.alarm.AlarmReceiver" />
        <receiver
            android:name="iris.jaagore.sabita_sant.alarm.ConnectivityReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="iris.jaagore.sabita_sant.alarm.GET_QUOTE" />
            </intent-filter>
        </receiver>

        <activity
            android:name="iris.jaagore.sabita_sant.alarm.Info"
            android:label="@string/title_activity_info" />
        <activity android:name="iris.jaagore.sabita_sant.alarm.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="iris.jaagore.sabita_sant.alarm.AlarmScreen" />
        <activity android:name="iris.jaagore.sabita_sant.alarm.QuoteActivity" />

        <service
            android:name="iris.jaagore.sabita_sant.alarm.QuoteService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="iris.jaagore.sabita_sant.alarm.Nav"
            android:label="@string/title_activity_nav"
            android:theme="@style/AppTheme" />

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="iris.example.sabita_sant.alarm.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>